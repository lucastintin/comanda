<!DOCTYPE html>
<html>
<head>
    <% include ./../partials/head %>
</head>
<body>
    <header>
        <% include ./../partials/header %>
    </header>
    <% if (mensagem) { %>
        <div class="alert alert-success" role="alert"><%= mensagem %></div>
    <% } %> 
    <div class="container mt-2">
        <form action="/produto" method="post">
            <div class="row">
                <div class="col">
                    <label>Produto</label>
                    <input class="form-control form-control-lg" type="text" placeholder="Produto" name="nome">
                </div>
                <div class="col">
                    <label>Qtd.</label>
                    <input class="form-control form-control-lg" type="text" placeholder="XX" name="quantidade">
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-8">
                    <label>Preço Compra</label>
                    <input class="form-control form-control-lg" type="text" placeholder="$$$" name="precoCompra">
                </div>
                <div class="col">
                    <label>Preço Venda</label>
                    <input class="form-control form-control-lg" type="text" placeholder="$$$" name="precoVenda">
                </div>
            </div>
            <br/>
            <input class="btn btn-primary btn-lg" type="submit" value="Cadastrar Produto" />
            <input class="btn btn-secondary btn-lg" type="reset" value="Apagar Dados" />
        </form>
    </div>
    <footer>
        <% include ./../partials/footer %>
    </footer>
</body>
</html>
