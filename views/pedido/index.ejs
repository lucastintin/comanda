<!DOCTYPE html>
<html>
<head>
    <% include ./../partials/head %>
</head>
<body>
    <header>
        <% include ./../partials/header %>
    </header>
    <% if (mensagem) { %>
        <div class="alert alert-success" role="alert"><%= mensagem %></div>
    <% } %> 
    <div class="container mt-2">
        <form action="/pedido" method="post">
            <div class="row">
                <div class="col">
                    <label>Comanda</label>
                    <input class="form-control form-control-lg" type="text" placeholder="XXX" name="numComanda">
                </div>
                <div class="col">
                    <label>Mat. Funcion√°rio</label>
                    <input class="form-control form-control-lg" type="text" placeholder="XX" name="matFuncionario">
                </div>
            </div>
            <span>&nbsp;</span>
            <div class="row">
                <div class="col-6 align-middle mt-4">
                    <div class="input-group">
                        <!-- <input class="form-control form-control-lg" type="text" placeholder="Item" name="item"> -->
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Item</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelect01">
                            <option selected>Selecione...</option>
                            <% for(var i=0; i < produtos.length; i++) { %>
                                <option value="<%= produtos[i].nome %>" name="item"><%= produtos[i].nome %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="col">
                    <label>Qtd</label>
                    <input class="form-control form-control-lg" type="text" placeholder="XX" name="qtd">
                </div>
            </div>
            <br/>
            <input class="btn btn-primary btn-lg" type="submit" value="Cadastrar Pedido" />
            <input class="btn btn-secondary btn-lg" type="reset" value="Apagar Dados" />
        </form>
    </div>
    <footer>
        <% include ./../partials/footer %>
    </footer>
</body>
</html>